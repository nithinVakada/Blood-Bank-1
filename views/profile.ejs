<body>
    <div class="alert alert-warning alert-dismissible success fade show" role="alert">
        <strong><%=user.name%></strong> Your Login was Successfull 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<section class="section about-section gray-bg" id="about">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <h3 class="dark-color">About Me</h3>
                            <h6 class="theme-color lead">   </h6>
                            <p> </p>
                            <div class="row about-list">
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Name:</label>
                                        <p><%=user.name%></p>
                                    </div>
                                    <div class="media">
                                        <label>Age:</label>
                                        <p><%=user.age%></p>
                                    </div>
                                    <div class="media">
                                        <label>State:</label>
                                        <p><%=user.state%></p>
                                    </div>
                                    <div class="media">
                                        <label>City:</label>
                                        <p><%=user.city%></p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>E-mail:</label>
                                        <p><%=user.email%></p>
                                    </div>
                                    <div class="media">
                                        <label>Phone:</label>
                                        <p><%=user.phonenumber%></p>
                                    </div>
                                    <div class="media">
                                        <label>Blood:</label>
                                        <p><%=user.bloodgroup%></p>
                                    </div>
                                    <div class="media">
                                        <label>Willing to donate:</label>
                                        <p><%=user.WillDonate%></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-avatar">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
