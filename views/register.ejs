    <form action="/register" method="POST">
        <h1>Donor Registration</h1>
        <hr>
        <div class="register">
        <div class="name">
            <label for="my_name">Name:</label><br>
            <input type="text" name="name" id="my_name" placeholder="Enter your name" autocomplete="off">
            <br>
        </div>
        <div class="age">
        <label for="my_age">Age:</label></br>
        <input type="number" id="my_age" name="age">
        
    </div>
      <div class="gender">
        Gender:
        <br>
        <div class="gender_options">

        <label for="my_male" >Male</label>
        <input type="radio" id="my_male" name="gender" value="Male">
        
        <label for="my_female" >Female</label>
        <input type="radio" name="gender" value="Female" id="my_female" >
       
        <label for="others">Others</label>
        <input type="radio" id="my_others" name="gender" value="Others">
        
         </br>
       </div>
      </div>
      
      <div class="bg">
        <label for="blood_group">Blood Group:</label>
        <select name="bloodgroup" id="blood_group">
            <option value="selct blood group">Select blood group</option>
            <option value="A+" >A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
        </select>
        <br>
    </div>
    <div class="phnum">
        <label for="ph_number">Phone number:</label>
        <select name="ph_number" id="phone_code">
            <option value="91">+91</option>
        </select>
        <input type="number" name="phonenumber" id="ph_number">
        </label>
        <br>
    </div>
    <div class="mail">
        <label for="e_mail">e-mail:</label><br>
        <input type="my_email" name="email" id="e_mail">
        <br>
    </div>
    <div class="location">
        <p>Location:</p>
        <label for="">State</label>
        <select  name="state" id="slct1" onchange="populate(this.id,'slct2')">
            <option value="">--Select your State--</option>
            <option value="Andhra Pradesh" name="Andhra Pradesh">Andhra Pradesh</option>
            <option value="Arunachalpradesh">Arunachal Pradesh</option>
            <option value="Assam">Assam</option>
            <option value="">Bihar</option>
            <option value="">Chattisgarh</option>
            <option value="">Goa</option>
            <option value="">Gujarat</option>
            <option value="">Haryana</option>
            <option value="">Himachal Pradesh</option>
            <option value="">Jammu and Kashmir</option>
            <option value="">Jharkhand</option>
            <option value="">Karnataka</option>
            <option value="">Kerala</option>
            <option value="">Madhya Pradesh</option>
            <option value="">Maharashtra</option>
            <option value="">Manipur</option>
            <option value="">Meghalaya</option>
            <option value="">Mizoram</option>
            <option value="">Nagaland</option>
            <option value="">Odisha</option>
            <option value="">Punjab</option>
            <option value="">Rajasthan</option>
            <option value="">Sikkim</option>
            <option value="">Tamil Nadu</option>
            <option value="Telangana">Telangana</option>
            <option value="">Tripura</option>
            <option value="">Uttar Pradesh</option>
            <option value="">Uttarakhand</option>
            <option value="">West Bengal</option>

        </select>

        <label for="">City</label>
        <select  id="slct2" name="city">Select city</select>
    </div>
        <script>
            function populate(s1, s2) {
                var s1 = document.getElementById(s1);
                var s2 = document.getElementById(s2);

                s2.innerHTML = "";
                if (s1.value === "Andhra Pradesh") {

                    var optionArray = ['Anathapur|Anathapur', 'Chittor|Chittor', 'East Godavari|East Godavari',
                        'Guntur|Guntur', 'Kadapa|Kadapa', 'Krishna|Krishna', 'Kurnool|Kurnool', 'Nellore|Nellore',
                        'Prakasam|Prakasam', 'Srikakulam|Srikakulam', 'Visakhapatnam|Visakhapatnam',
                        'Vizianagaram|Vizianagaram', 'West Godavari|West Godavari'
                    ];
                }
                else if (s1.value == "Telangana") {
                    var optionArray = ['Adilabad|Adilabad', 'Hyderabad|Hyderabad', 'Karimnagar|Karimnagar',
                        'Khammam|Khammam', 'Mahaboobnagar|Mahaboobnagar', 'Medak|Medak',
                        'Nalgonda|Nalgonda', 'Nizamabad|Nizamabad', 'Rangareddy|Rangareddy',
                        'Warangal|Warangal'
                    ];
                }
                else if (s1.value == "Arunachalpradesh") {
                    var optionArray = ['anjaw|Anjaw', 'changlang|Changlang', 'dibangvalley|Dibang Valley',
                        'eastsiang|East Siang', 'eastkameng|East Kameng', 'kiapi|Kiapi',
                        'kurungkumey|Kurung Kumey', 'kradaadi|Kradaadi', 'lohit|Lohit',
                        'longdong|Longdong', 'lowersubansiri|Lower Subansiri',

                    ]
                }
                for (var option in optionArray) {
                    var pair = optionArray[option].split("|");
                    var newoption = document.createElement("option");

                    newoption.value = pair[0];
                    newoption.innerHTML = pair[1];
                    s2.options.add(newoption);
                }

            }


        </script>
        <br>
        <div class="donate">
            <p>Willing to donate</p>
            <label for="yes">Yes</label>
            <input type="radio" name="WillDonate" id="yes" value="Yes">
            <br>
            <label for="no">No</label>
            <input type="radio" name="WillDonate" id="no" value="No">
          </div>
        
        </div>
        <div class="pw">
        <label for="password">Password:</label><br>
        <input type="password" name="password" id="my_password"><br>
        <label for="confirm_password">Confirm password:</label><br>
        <input type="password" name="my_confirm_password" id="confirm_password">
        <br>
    </div>
